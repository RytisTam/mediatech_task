{% extends 'base.html.twig' %}

{% block title %}Asset{% endblock %}

{% block body %}
    <div class="container flex-centere">
        <h1>Asset</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ asset.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ asset.label }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ asset.currency }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ asset.amount }}</td>
            </tr>
            </tbody>
        </table>

        <a class="table-btn" href="{{ path('app_asset_index') }}">Back to list</a>

        <a class="table-btn" href="{{ path('app_asset_edit', {'id': asset.id}) }}">Edit</a>


        {{ include('asset/_delete_form.html.twig') }}
    </div>
{% endblock %}
