{% extends 'base.html.twig' %}

{% block title %}Asset{% endblock %}

{% block body %}
    <h1>Asset</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ asset.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ asset.label }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ asset.currency }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ asset.amount }}</td>
            </tr>
            <tr>
                <th>ValueInUsd</th>
                <td>{{ asset.valueInUsd }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ asset.updatedAt ? asset.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_asset_index') }}">back to list</a>

    <a href="{{ path('app_asset_edit', {'id': asset.id}) }}">edit</a>

    {{ include('asset/_delete_form.html.twig') }}
{% endblock %}
