{% extends 'base.html.twig' %}

{% block title %}Asset index{% endblock %}

{% block body %}
    <h1>Asset index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Currency</th>
                <th>Amount</th>
                <th>ValueInUsd</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for asset in assets %}
            <tr>
                <td>{{ asset.id }}</td>
                <td>{{ asset.label }}</td>
                <td>{{ asset.currency }}</td>
                <td>{{ asset.amount }}</td>
                <td>{{ asset.valueInUsd }}</td>
                <td>{{ asset.updatedAt ? asset.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_asset_show', {'id': asset.id}) }}">show</a>
                    <a href="{{ path('app_asset_edit', {'id': asset.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_asset_new') }}">Create new</a>
{% endblock %}
